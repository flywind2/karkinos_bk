package jp.ac.utokyo.rcast.karkinos.readssummary;

public class Interval implements java.io.Serializable{
	
	
	public Interval(String chr,int pos,int depth){
		this.chr = chr;
		this.start = pos;
		this.end = pos;
		this.depth = depth;
	}
	
	public Interval(String chr,int start,int end,String refseqid,String geneSymbol){
		this.chr = chr;
		this.start = start;
		this.end = end;
		this.refseqid = refseqid;
		this.geneSymbol = geneSymbol;
	}
	
	String refseqid = null;
	String geneSymbol= null;
	
	public String getRefseqid() {
		return refseqid;
	}

	public void setRefseqid(String refseqid) {
		this.refseqid = refseqid;
	}

	public boolean extendInterval(String chr,int pos,int depth){
		
		if(!chr.equals(this.chr)){
			return false;
		}
		if(pos-this.end>1){
			return false;
		}
		if(this.depth!=depth){
			return false;
		}
		////
		this.end = pos;
		return true;		
	}
	
	public String getChr() {
		return chr;
	}

	public int getStart() {
		return start;
	}

	public int getEnd() {
		return end;
	}

	public int getDepth() {
		return depth;
	}

	String chr;
	int start;
	int end;
	int depth;
	public boolean contain(String chr2, int pos) {
		
		boolean bool = chr.equals(chr2)&& (pos>=start && pos<=end);
		return bool;
	}
	
	
}
